<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
  <div class="page-limit">
    <h2 style="line-height: 1.2em;">Input your <b>Budget Limit</b><br>for below categories</h2><br>

    <form action="/main" method="post">
      <label>
        <p>Makan</p>
        <input id="cat-form1" name="food">
      </label> <br><br>
      <label>
        <p>Transport</p>
        <input id="cat-form2" name="transport">
      </label> <br><br>
      <label>
        <p>Entertainment</p>
        <input id="cat-form3" name="entertainment">
      </label> <br><br>
      <button type="submit" onclick="return validation()" id="limit-submit">Submit</button>
      <p id="valid"></p>
    </form>
    <a href = '/expense/result'><h4>Go to Summary Page</h4></a>
  </div>
    <script>
      function validation() {
        let cat1 = document.getElementById('cat-form1').value,
            cat2 = document.getElementById('cat-form2').value,
            cat3 = document.getElementById('cat-form3').value,
            text = ''

        if(isNaN(cat1) || cat1 <= 0 || cat1 === ''){
          text = 'All fields must be filled.'
          document.getElementById('valid').innerHTML = text
          return false
        } else if(isNaN(cat2) || cat2 <= 0 || cat2 === ''){
          text = 'All fields must be filled.'
          document.getElementById('valid').innerHTML = text
          return false
        } else if(isNaN(cat3) || cat3 <= 0 || cat3 === ''){
          text = 'All fields must be filled.'
          document.getElementById('valid').innerHTML = text
          return false
        } else {
          return true
        }

      }
    </script>

  </body>
</html>
